
<div class="container">
  <fieldset>
    <legend>Please enter comment for trip:</legend>

        <%= form_tag "/places/#{params[:id]}/comments", method: :post do %>

          <div>
          <%= label_tag :comment%>
          <%= text_area_tag :comment,  nil, placeholder: "Comment Here", class: 'comment'%>
          </div>
          <br/>
          <div>
          <%= submit_tag "Save Comment", class: "btn btn-info btn-md"%>
          </div>
        <% end -%>
    </fieldset>
  </div>