<form class="container">
  <fieldset>
    <legend>Please enter comment for trip:</legend>

        <%= form_tag "/trips/#{params[:id]}/comments", method: :post do %>

          <div>
          <%= label_tag :comment%>
          <%= text_area_tag :comment%>
          </div>

          <div>
          <%= submit_tag "Save Comment"%>
          </div>
        <% end -%>
  </fieldset>
</form>