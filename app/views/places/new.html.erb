
<div class="container">
  <fieldset>
    <legend>Enter Place Information:</legend>

  <%= form_tag '/places', method: :post do %>

    <div class="form-group ">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, placeholder: "Place Name", class: 'input-field' %>
    </div>
    <div class="form-group ">
      <%= label_tag :phone %>
      <%= text_field_tag :phone,nil, placeholder: "Optional", class: 'input-field'%>
    </div>
    <div class="form-group" id="placesearch">
      <%= label_tag :place %>
      <%= text_field_tag :search, params[:search],:id => 'geo-input', class: 'input-field' %>
    </div>

    <%= hidden_field_tag :trip_id, params[:trip_id], class: "form-control" %>
    <%= hidden_field_tag :longitude, class: "form-control" %>
    <%= hidden_field_tag :latitude, class: "form-control" %>

    <div class="form-group ">
    <%= submit_tag "Add Places", class: "btn btn-info btn-md" %>
    </div>
  </div>
  <% end %>
  </fieldset>
</div>


