
<div class="container">
  <fieldset>
    <legend>Enter Trip Information:</legend>
    <div class="form-group ">
    <%= form_tag "/invited", method: :post do %>
      <label for="inputEmail" class="col-lg-2 control-label">Trip ID:</label>
      <div class="col-lg-10">
        <%= text_field_tag :slug, nil, placeholder: "ie. family-euro-trip", required: true  %>
      </div>
      </br>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <%= text_field_tag :password, nil, placeholder: "********", required: true  %>
      </div>
    </div>
    </br>
    </br>
        <div class="col-lg-7">
        <center>
        <button type="submit" class="btn btn-primary">Submit</button>
        </center>
        </div>
        <%end%>
    </div>
    </div>
  </fieldset>
</div>