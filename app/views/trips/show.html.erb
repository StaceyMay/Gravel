<h1><%= @trip.name %></h1> 

<% @trip.places.all.each do |place|%>
<p>
<%= link_to place.name, "/places/#{place.id}"%>
</p>
<% end -%>

<p><% if @trip.trip_comments.first %>
<p><%= @trip.trip_comments.first.comment%></p>
<% end -%>


<% if current_user.currently_admin?(@trip)%>
  <%= link_to "Edit Trip" ,"/trips/#{@trip.id}/edit", class: 'btn btn-default btn-md'%>
<%end%>



 
<%= mail_to " ", "Invite Friends to Trip", subject: "Come Join My #{@trip.name} Trip", body: "Trip ID: #{@trip.slug} Trip Password: #{@trip.password} Go to http://localhost:3000/invite to join", class: 'btn btn-default btn-md' %>


<%= link_to "Go Back to All Trips" ,"/trips", class: 'btn btn-default btn-md' %>
<%= link_to "Add Place" ,"/places/new?trip_id=#{@trip.id}", class: 'btn btn-default btn-md' %>


<%= link_to "Add Comment", "/trips/#{@trip.id}/comments/new", class: 'btn btn-default btn-md' %>
<%= link_to "Delete trip", "/trips/#{@trip.id}", class: 'btn btn-default btn-md', method: :delete %> 



<% if @locs.first%>
<head>
  <title>Trip with Markers</title>
  <script src="http://maps.google.com/maps/api/js?keyAIzaSyBphYEHxnocJdbTswQnh8YEAAz1jfPOmo0s?sensor=false" type="text/javascript"></script>
</head>
<body>
  <div id="map" style="height: 400px; width: 1000px;">
</div>
<script type="text/javascript">
    var locations = <%=@locs.to_json.html_safe%>;

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center: new google.maps.LatLng(<%=@locs.first[1].to_json.html_safe%>, <%=@locs.first[2].to_json.html_safe%>),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) { 
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
</body>
<%end%>