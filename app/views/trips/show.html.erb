<div class="row">
<div class="container">
<h1 class="pull-left"><%= @trip.name %></h1>   
    <div class="btn-group">
      <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
        Trip Settings
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= mail_to " ", "Invite Friends to Trip", subject: "Come Join My #{@trip.name} Trip", body: "Trip ID: #{@trip.slug} Trip Password: #{@trip.password} Go to http://localhost:3000/invite to join"%></li>
        <li><%= link_to "Go Back to All Trips" ,"/trips"%></li>
        <li><%= link_to "Add Place" ,"/places/new?trip_id=#{@trip.id}"%></li>
        <li> <%= link_to "Add Comment", "/trips/#{@trip.id}/comments/new"%></li>
        <li><%= link_to "Delete trip", "/trips/#{@trip.id}", method: :delete %></li>
       </ul>
    </div>
  </div>

<% if current_user.currently_admin?(@trip)%>
<div class="btn-group col-lg-2 pull-right">
      <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="true"> Admin Settings:
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><a href= "/trips/<%=@trip.id%>/edit"> Edit Trip:</a></li>
        <li><a href="#">Dropdown link</a></li>
       </ul>
    </div>
<%end%>
</div>
</div>


<div class="row">
<% if @trip.places.first %>
  <div class="well col-md-2 pre-scrollable">
  <%= form_tag "/trips/#{params[:id]}/comments", method: :post do %>
    <% @trip.places.all.each do |place|%>
    <div>
    <%= check_box_tag(place.name, {:remote => true, :onclick => ("javascript: document.list.submit();")}) %>
    <a href="/places/<%=place.id%>"><%= label_tag(place, place.name) %></a>
    </div>
    <% end -%>
    <%= submit_tag "Add to Itinerary", class: 'btn btn-default btn-md'%>
  </div>
  <%end%>
  <%end%>
  <center>



  <% if @locs.first%>
<head>
  <title>Trip with Markers</title>
  <script src="http://maps.google.com/maps/api/js?keyAIzaSyBphYEHxnocJdbTswQnh8YEAAz1jfPOmo0s?sensor=false" type="text/javascript"></script>
</head>
<body>
  <div id="map" style="height: 400px; width: 800px;">
</div>
<script type="text/javascript">
    var locations = <%=@locs.to_json.html_safe%>;
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center: new google.maps.LatLng(<%=@locs.first[1].to_json.html_safe%>, <%=@locs.first[2].to_json.html_safe%>),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });
    var infowindow = new google.maps.InfoWindow();
    var marker, i;
    for (i = 0; i < locations.length; i++) { 
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });
      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
</body>
<%end%>
  </center>
  <div class="well col-md-3 pre-scrollable pull-right" >
  <h3> Please enter comment for trip: </h3>

  <%= form_tag "/trips/#{params[:id]}/comments", method: :post do %>

    <div>
    <center>
    <%= text_area_tag :comment %>
    </div>

    <div>
    <%= submit_tag "Save Comment"%>
    </div>
    </center>
    <% end -%>

    <% if @trip.trip_comments.first %>
    <p><% @trip.trip_comments.order(created_at: :desc ).each do |comment|%></p>
    <div id="comment">
    <%= comment.comment%> </br>
    - <%= comment.user.name%>
    at: <%= comment.created_at.strftime("%D - %r")%>
    </div>
    <%end%>
    <% end -%>
  </div>
</div>



