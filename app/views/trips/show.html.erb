<% @trip.places.all.each do |place|%>
<p>
<%= link_to place.name, "/places/#{place.id}"%>
</p>
<% end -%>

<p><% if @trip.trip_comments.first %>
<p><%= @trip.trip_comments.first.comment%></p>
<% end -%>

<%= link_to "Go Back to All Trips" ,"/trips", class: 'btn btn-success btn-md' %>
<%= link_to "Add Place" ,"/places/new?trip_id=#{@trip.id}", class: 'btn btn-info btn-md' %>


<%= link_to "Add Comment", "/trips/#{@trip.id}/comments/new" %>
<%= link_to "Delete trip", "/trips/#{@trip.id}", class: 'btn btn-danger btn-md', method: :delete %> 

<head>
  <title>Google Maps Multiple Markers</title>
  <script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
</head>
<body>
  <div id="map" style="height: 400px; width: 500px;">
</div>
<script type="text/javascript">
    var locations = <%=@locs.to_json.html_safe%>;

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center: new google.maps.LatLng(<%=@locs.first[1].to_json.html_safe%>, <%=@locs.first[2].to_json.html_safe%>),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();

    var marker, i;

    for (i = 0; i < locations.length; i++) { 
      marker = new google.maps.Marker({
        position: new google.maps.LatLng(locations[i][1], locations[i][2]),
        map: map
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infowindow.setContent(locations[i][0]);
          infowindow.open(map, marker);
        }
      })(marker, i));
    }
  </script>
</body>